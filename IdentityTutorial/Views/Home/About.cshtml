@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true">
}

@section scripts {
    <script  asp-append-version="true" src="~/js/about.js"></script>

}

